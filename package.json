{
  "name": "gas-ts-template",
  "version": "1.0.0",
  "description": "Google Apps Script (TypeScript) Template.",
  "main": "src/main.ts",
  "scripts": {
    "login": "clasp login",
    "create": "clasp create --rootDir ./dist",
    "open": "clasp open",
    "build": "webpack",
    "push": "clasp push",
    "deploy": "run-s --continue-on-error build push",
    "lint": "run-s --continue-on-error lint:*",
    "lint:prettier": "prettier --loglevel warn --check --ignore-path .gitignore .",
    "lint:eslint": "eslint --ext \".js,.ts\" --ignore-path .gitignore .",
    "fix": "run-s --continue-on-error fix:*",
    "fix:prettier": "prettier --loglevel warn --write --ignore-path .gitignore .",
    "fix:eslint": "eslint --ext \".js,.ts\" --fix --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/google-apps-script": "^1.0.39",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "copy-webpack-plugin": "^9.1.0",
    "eslint": "^8.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-webpack-plugin": "^3.1.1",
    "gas-webpack-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  }
}
