{
  "name": "gas-ts-template",
  "version": "1.0.0",
  "description": "Google Apps Script (TypeScript) Template.",
  "main": "src/main.ts",
  "scripts": {
    "login": "clasp login",
    "create": "clasp create --rootDir ./dist && cpx ./dist/.clasp.json .",
    "open": "clasp open",
    "build": "webpack",
    "push": "clasp push",
    "deploy": "run-s --continue-on-error build push",
    "lint": "run-s --continue-on-error lint:*",
    "lint:prettier": "prettier --loglevel warn --check --ignore-path .gitignore .",
    "lint:eslint": "eslint --ext \".js,.ts\" --ignore-path .gitignore .",
    "fix": "run-s --continue-on-error fix:*",
    "fix:prettier": "prettier --loglevel warn --write --ignore-path .gitignore .",
    "fix:eslint": "eslint --ext \".js,.ts\" --fix --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/google-apps-script": "^1.0.53",
    "@types/node": "^18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "copy-webpack-plugin": "^11.0.0",
    "cpx": "^1.5.0",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-webpack-plugin": "^3.2.0",
    "gas-webpack-plugin": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
